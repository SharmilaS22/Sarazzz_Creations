      <section id="add" class="container my-5">
        <form action="/add-product" method="post">
          <div class="form-group">
            <label for="pname">Name:</label>
            <input
              type="text"
              name="prodTitle"
              class="form-control"
              id="pname"
            />
          </div>
          <!-- <div class="form-group">
            <label for="pcost">Price:</label>
            <input
              type="number"
              name="prodPrice"
